<PACKAGE "LEXER">

<ENTRY LEXER TBRKS>

<SETG TBRKS " 	
:.,/-">
<GDECL (TBRKS) STRING>

<DEFINE LEXER (BB "OPTIONAL" (BRKS ,TBRKS)
	       "AUX" (BT <>) TT)
	#DECL ((BRKS BB TT) STRING (BT) <OR STRING FALSE>)
	<MAPF ,VECTOR
	      <FUNCTION ()
		   <COND (<EMPTY? .BB>
			  <COND (.BT
				 <SET TT
				      <SUBSTRUC .BT
						0
						<- <LENGTH .BT>
						   <LENGTH .BB>>>>
				 <SET BT <>>
				 <MAPSTOP .TT !\>)
				(ELSE <MAPSTOP>)>)
			 (<MEMQ <1 .BB> .BRKS>
			  <COND (.BT
				 <SET TT
				      <SUBSTRUC .BT
						0
						<- <LENGTH .BT>
						   <LENGTH .BB>>>>
				 <SET BT <>>
				 <MAPRET .TT <1 .BB>>)>)
			 (<NOT .BT> <SET BT .BB>)>
		   <SET BB <REST .BB>>
		   <MAPRET>>>>

<ENDPACKAGE>
