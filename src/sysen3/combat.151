	MYLIN1		; LIST LINKS FROM ME

; SET UP FOR SETTING QUESTION DEFAULT
SETQDF:	SETOM	SQDEF		; SAYS THAT NEXT THING HACKED WILL BE DEF SET
	PUSH	BK,[[ASCIZ /Question/]]
	PUSH	BK,[CRLOOP]
	PUSH	BK,[[POPJ P,]]
	PUSH	BK,P		; SET UP ACTIVATION
	JRST	CRLOP1

