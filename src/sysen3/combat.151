	MOVE	B,[010700,,UUOSCR+1]
	PUSHJ	P,UONUM		; PRINT NUMBR
	JRST	UUORET

UONUM:	IDIV	C,BASE
	ADDI	D,"0
	CAILE	D,"9
	 ADDI	D,"A-"9-1	; MAKE HEX DIGIT, IF NOT DECIMAL
	DPB	D,B		; SAVE DIGIT
	DBP	B
	ADDI	A,1
	JUMPN	C,UONUM		; IF NON-ZERO, STILL CRAP LEFT
	PUSHJ	P,SIOTA
	POPJ	P,

IOTA:	
