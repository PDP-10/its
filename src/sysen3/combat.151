; CALLED FROM HERE AND FROM HASK (HSNAM)
ASNMD1:	HRRZ	A,(OUTPTR)	; GET THE ANSWER
	JUMPE	A,CPOPJ		; IF 0, LET IT GO
	HRLI	A,440700	; BP TO ANSWER
	PUSH	P,A		; SAVE IT
	MOVEI	A,20
	PUSHJ	P,IBLOCK	; GET ANOTHER BLOCK CORRECT LENGTH
