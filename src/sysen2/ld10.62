	MOVE B,E	;GET INDEX # OF INFERIOR
	MOVE U,ARYF(A)	;AND HIS FLAGS
	PUSHJ P,ILINK	;LINK 'EM
	POP P,U	;RESTORE
	POP P,A
	POPJ P,

;FUNCTION THAT RETURNS ORIGIN LOCATION AND PEN POSITION
