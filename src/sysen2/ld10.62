;ASSORTED MACROS

DEFINE ROUND AX
	FAD AX,[0.5]
	MULI AX,400
	TSC AX,AX
	ASH <AX+1>,-243(AX)
TERMIN


DEFINE FIX AX,AY
	MULI AX,400
	TSC AX,AX
	ASH <AX+1>,AY-243(AX)
TERMIN

DEFINE ROUND AX
	FAD AX,[0.5]
	FIX AX,0
TERMIN

DEFINE FLOAT AX,AY
	TLC AX,232000+1000*AY
	FADR AX,AX
TERMIN


