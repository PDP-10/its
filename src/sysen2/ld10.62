	ADD X,ARYL(F)	;LAST OLD ADR+1
ARYMV1:	MOVE W,-1(X)
	MOVEM W,-1(D)
	SOS X
	CAML X,ARYORG(F)
	SOJA D,ARYMV1
	JRST ARYRST

