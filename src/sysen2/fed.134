		SIXBIT /T11MP/
		B		;PAGE
		SETZ (A)]	;MAP ENTRY
	.VALUE
	AOJ A,
	AOJA B,GET11L
]
;WRITE WORD INTO DISPLAY MEMORY

6TVWRT:	MOVEI A,CIOR
