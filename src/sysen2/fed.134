	HRRZ A,(TT)		;CHARACTER WIDTH
	PUSHJ P,DECPNT
	MOVEI A,[ASCIZ / CHARACTER WIDTH/]
	PUSHJ P,TERPRI
	HLRE	A,(TT)		;LEFT KERN
	PUSHJ P,DECPNT
	MOVEI A,[ASCIZ / LEFT KERN/]
