;17/ jrst  6
;
;(start at 6)
;
;This is (one version of) the "breathing" KI lights code.  (The other
;version doesn't have the movem or dmove.)

SLEEP==1
PI==4

START:	SETO 1,
	.IOTLSR 1,

	MOVE 0,[1,,0]
	MOVEI 1,400000
	MOVEI 2,0
	MOVEI 3,0

LOOP:	XOR 3,1
	XOR 3,0
	MOVEM 3,2
	IMULI 3,1
	DMOVE 2,2
	DATAO PI,3
	MOVEI 4,SLEEP
	.SLEEP 4,
	ROT 0,1
	ROT 1,-1
	JRST LOOP

	END START
